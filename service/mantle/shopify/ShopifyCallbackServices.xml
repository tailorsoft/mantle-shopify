<?xml version="1.0" encoding="UTF-8"?>
<services xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:noNamespaceSchemaLocation="http://moqui.org/xsd/service-definition-2.1.xsd">

    <service verb="alwaysAccept" noun="FulfillmentRequest">
        <out-parameters>
            <parameter name="response"/>
        </out-parameters>
        <actions>
            <set field="response" value="{'message': 'Alls good cus'}"/>
        </actions>
    </service>

    <service verb="handle" noun="FulfillmentNotification" authenticate="anonymous-all">
        <in-parameters>
            <parameter name="request"/>
        </in-parameters>
        <out-parameters>
            <parameter name="response"/>
        </out-parameters>
        <actions>
            <log message="HANDLING FULFILLMENT NOTIFICATION FROM SHOPIFY\n\n ${request} \n\n"/>
            <set field="response" value='Nice'/>
        </actions>
    </service>

</services>
